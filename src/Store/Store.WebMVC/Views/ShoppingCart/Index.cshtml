@{
    ViewBag.Title = "Shopping cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ваша корзина</h2>

<div id="updateCart">
    @Html.Partial("ShowCart")
</div>
<a class="btn btn-primary btn-sm" href="@Model.returnUrl">Continue Shopping</a>
@Ajax.ActionLink("Empty trash", "EmptyCart", "ShoppingCart", null, new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "updateCart",
    Confirm = "Do you want to completely empty the trash?"
}, new { @class = "btn btn-primary btn-sm" })
@Html.ActionLink("Place an Order", "MakeOrder", "Checkout", null, new { @class = "btn btn-primary btn-sm" })
