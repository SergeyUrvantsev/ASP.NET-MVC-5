@model Store.WebMVC.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Account Login</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label>Email</label>
        @Html.EditorFor(m => m.Email, null, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Email)
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <input type="submit" class="btn btn-success" value="Sign in" />

}
<h4>If you do not have an account, you can <a href="@Url.Action("Register")">Register</a> on our website</h4>

