@model Store.WebMVC.Models.OrderViewModel

@{
    ViewBag.Title = "Checkout";
}

<h3>Checkout</h3>
    @using (Html.BeginForm("MakeOrder", "Checkout"))
    {   @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label>Name</label>
            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control col-md-4"}})
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>
        <div class="form-group">
            <label>Surname</label>
            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control col-md-4" } })
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
        <div class="form-group">
            <label>Address</label>
            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control col-md-4" } })
            @Html.ValidationMessageFor(m => m.Address)
        </div>
        <div class="form-group">
            <label>City</label>
            @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control col-md-4" } })
            @Html.ValidationMessageFor(m => m.City)
        </div>
        <div class="form-group">
            <label>Telephone</label>
            @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control col-md-4" } })
            @Html.ValidationMessageFor(m => m.Phone)
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control col-md-4" } })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <input type="submit" value="Confirm" class="btn btn-primary"/>
    }

